extends plantilla

block esqueleto
    .contenido-principal
        h1 #{nombrePagina}

        if errores
            each error in errores
                .alerta.error #{error.texto}

        form.agregar-proyecto(action="/nueva-baraja" method="POST")
            .campo 
                label(for="nombre") Nombre de baraja:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre de baraja")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")